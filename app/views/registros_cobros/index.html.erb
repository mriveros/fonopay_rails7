<%= javascript_include_tag "sweetalert.min" %>
<%= stylesheet_link_tag "sweetalert" %>
<div>

  <div class="col-sm-12" style="border-bottom: 2px solid #b6b6b6;margin-bottom:5px;padding:0px;">
    <h3 style="float:left;margin-top:5px;">Registro de Cobros</h3>
  </div>
</div>

<div style="clear:both;"></div>
 
<div class="table-responsive" id="table-pagos-cobros-detalles">

  <table class="table table-small-font table-bordered table-striped" style="font-size:11px;">
   
    <thead>

      <%= form_tag registros_cobros_lista_path, remote: true, id: "form-buscar-pagos-cobros-detalles"  do  %>

        <tr>

          <th>
            <span>ID</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_cobros_consultas_id, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_id');"><i class="fa fa-times"></i></span>
            </div>
          </th>
          
          <th>
            <div><%= label_tag nil, "Fecha Cita".html_safe %></div>
              <div class='input-group date'>
                <%= text_field_tag :form_buscar_cobros_consultas_fecha_cita, nil, class: 'form-control input-sm' %>
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_fecha_cita');"><i class="fa fa-times"></i></span>
              </div>
         </th>

         <th>
            <span>CI Paciente</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_cobros_consultas_paciente_documento, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_paciente_documento');"><i class="fa fa-times"></i></span>
            </div>
          </th>
         
        <th>
            <span>Paciente<br/> <em style="font-size: 7px;"> Ej: Juan Gonzalez</em></span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_cobros_consultas_paciente_nombres, nil, :class => 'form-control', :placeholder => "" %>
            <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles','#form_buscar_cobros_consultas_paciente_nombres');"><i class="fa fa-times"></i></span>
            </div>
            <em class="nmb"></em>
        </th>

        <th>
            <span>Mes</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_cobros_consultas, :mes_id, Mes.orden_mes, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_mes_id');"><i class="fa fa-times"></i></span>
            </div>
        </th>

        <th>
            <span>AÃ±o</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_cobros_consultas, :anho_id, PeriodoEscolar.orden_periodo, :anho_periodo, :anho_periodo, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_anho_id');"><i class="fa fa-times"></i></span>
            </div>
        </th>

        
        <th>
            <span>Profesional</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_cobros_consultas, :profesional_id, VProfesional.nombre_persona.orden_01, :profesional_id, :nombre_apellido, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_profesional_id');"><i class="fa fa-times"></i></span>
            </div>
        </th>

        <th>
            <span>Monto</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_cobros_consultas_monto, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_monto');"><i class="fa fa-times"></i></span>
            </div>
        </th> 

       <th>
            <span>Profesional</span>
            <div class="input-group input-group-sm">
              <%= collection_select :form_buscar_cobros_consultas, :estado_cobro_id, EstadoCobro.orden_01, :id, :descripcion, { include_blank: true}, {:class => 'form-control input-sm', style: "font-size:9px;"} %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-pagos-cobros-detalles', '#form_buscar_cobros_consultas_profesional_id');"><i class="fa fa-times"></i></span>
            </div>
        </th>
 

        <th></th>

        </tr>

        <% end %>

      </thead> 

    <tbody id="pagos-cobros-detalles-lista"></tbody>
  
  </table>

</div>

<script type="text/javascript">

  //---------------------------- RECUPERANDO DATOS ----------------------------//
  $("#form-buscar-pagos-cobros-detalles").bind("submit", function () {
    
    var valido = true;
      
    if(valido){
      $(".nmb").html('');       
      $("#pagos-cobros-detalles-lista").html("<%= escape_javascript("<tr><td colspan='9' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}</td></tr>").html_safe %>")      
    }
  })
 
  //---------------------------------------------------------------------------//
  //---------------------------- BUSCAR PERSONAS-------- -------------------------//
  $("#table-pagos-cobros-detalles input, #table-pagos-cobros-detalles select").bind('change', function () {
      $.ajaxQ.abortAll();
      $("#form-buscar-pagos-cobros-detalles").submit();

  })
  //----------------------------------------------------------------------------//
  //----------------------------INICIO -----------------------------------------//
  aplicar_datepicker();
  $("#form-buscar-pagos-cobros-detalles").submit();
  <% if params[:agregar] %>
    $("#link-to-agregar-pagos-cobros").trigger('click');
  <% end %>
  //----------------------------------------------------------------------------//
</script>

<style>
    /*INTRO.JS*/
    .introjs-helperNumberLayer{
        width: 23px;
        height: 23px;
        padding: 0px;
    }

    #start-tour{
        cursor: pointer;
    }

    #form-buscar-pagos-cobros-detalles table th { background:#e6e6e6;}
    #form-buscar-pagos-cobros-detalles table th span.limpiar { background:#fff;}

</style>
